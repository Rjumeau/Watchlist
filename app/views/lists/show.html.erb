<h2><%= @list.name %></h2>
<p><%@list.bookmarks.each do |bookmark|%></p>
<h3><%= bookmark.movie.title %></h3>
<p><%= bookmark.movie.overview %></p>
<%= {bookmark.comment} %>
<%= link_to "Delete",
  list_path(@list)
  method: delete,
  data: {confirm: "Are you sure dude ?"} %>
<% end %>

<%= link_to "Add a movie", new_list_bookmark_path(@list) %>
